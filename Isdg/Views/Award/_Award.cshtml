@using Isdg.Models
@model AwardViewModel
@if (Model == null)
{    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })    
}
else 
{
    <div id="award_id_@Model.Award.Id">        
        <div class="award">        
            <div class="award__info"><span class="award__heading">@Model.Award.Heading</span>
                @if (Isdg.Lib.UserHelper.IsAdmin()) 
                {
                    <span class="links">                    
                        <a role="button" title="Edit award" onclick="showForm(this, 'award', 'award__edit')"><span class="fa fa-pencil"></span></a>                
                        <a role="button" title="Show award details" onclick="showForm(this, 'award', 'award__details')"><span class="fa fa-plus"></span></a>                    
                        <a role="button" title="Delete award" onclick="showForm(this, 'award__info', 'award__delete')"><span class="fa fa-trash"></span></a>                    
                    </span>
                }
                @Html.Partial("_Delete", Model.Award)
            </div>
            <div class="award__content">
                @if (!String.IsNullOrEmpty(Model.Award.PathToFirstPicture)) 
                {
                    if (!String.IsNullOrEmpty(Model.Award.PathToSecondPicture))
                    {
                        <div class="award__image"><img src="@Model.Award.PathToFirstPicture" /><img src="@Model.Award.PathToSecondPicture"/></div> 
                    }
                    else
                    {
                        <div class="award__image"><img src="@Model.Award.PathToFirstPicture" /></div> 
                    }
                }
                <div class="award__content">@Html.Raw(Model.Award.Content)
                    <div class="award__author">Published by @Model.UserName</div>
                </div>
            </div>                
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
            @Html.Partial("_Edit", Model.Award)
            @Html.Partial("_Details", Model.Award)
        </div>
    </div>        
}



