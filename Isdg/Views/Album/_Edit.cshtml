@model Isdg.Core.Data.Album
<div class="album__edit hidden">
@using (Ajax.BeginForm("CreateEditAlbum", "Album", new AjaxOptions()
{
    UpdateTargetId = "album_id_" + Model.Id,
    OnSuccess = "bindCarousel()"  
}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => Model.Id)        
                
        <div class="form-group">
            @Html.LabelFor(model => Model.Name, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => Model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => Model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-sm" />
                <input type="button" value="Cancel" class="btn btn-default btn-sm" onclick="closeFormOnButton('album__edit', this)" />
            </div>
        </div>
        <hr />
    </div>
}
</div>
