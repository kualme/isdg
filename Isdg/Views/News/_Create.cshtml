@model Isdg.Core.Data.News

@using (Ajax.BeginForm("CreateEditNews", "News", new AjaxOptions()
{
    UpdateTargetId = "news",
    InsertionMode = InsertionMode.InsertBefore,
    OnSuccess = Isdg.Lib.UserHelper.IsAdmin() ? "" : "showSuccessMessage('news__form_add', 'News')",
    OnComplete = "bindCkeditor()"
}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <a role="button" class="news__add_open" onclick="openCreationForm('news')">Add News <span class="fa fa-angle-double-down"></span></a>        
        <hr />
        <div class="news__form_add" style="display: none;">            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>                          
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default btn-sm" />
                </div>
            </div>
            <div class="text-success success-message hidden"></div>                
            <hr />
        </div>        
        <a role="button" class="news__add_close" style="display: none;" onclick="closeCreationForm('news')">Add News <span class="fa fa-angle-double-up"></span></a>        
    </div>
}
