@using Isdg.Models
@model IEnumerable<SendedEmailViewModel>

@{
    ViewBag.Title = "Newsletter";
}

<div class="section-header"><h2>Newsletter</h2></div>
@Html.Partial("_Create", new SendEmailModel())

<div id="sended_emails">            
    @if (Model != null && Model.Count() > 0) 
    {
        <div class="section-header"><h2>Sended emails</h2></div>    
    }
    @foreach (var item in Model) 
    {
        @Html.Partial("_SendedEmail", item)    
    }    
</div>
