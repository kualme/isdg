@model Isdg.Models.ApplicationUserViewModel
<span class="user__delete hidden">
@using (Ajax.BeginForm("ConfirmDeleteUser", "Users", new { userId = Model.Id }, new AjaxOptions() { UpdateTargetId = "user_id_" + Model.Id }, new { @class = "form_inline text-danger" }))
{    
    <span class="delete_confirmation">Are you sure you want to delete this user?</span>
    @Html.AntiForgeryToken()
    <span class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default btn-sm" onclick="closeFormOnButton('user', this)" />
        <input type="button" value="Cancel" class="btn btn-default btn-sm" onclick="closeFormOnButton('user__delete', this)" />
    </span>
}
</span>
