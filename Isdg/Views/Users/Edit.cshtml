@using Isdg.Lib.Extensions;
@model Isdg.Models.ApplicationUserViewModel

@{
    ViewBag.Title = "Edit user";
}

<div class="section-header"><h2>@ViewBag.Title</h2></div>

@using (Html.BeginForm("EditUser", "Users", new { redirectToIndex = true }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.UserName)
        @Html.HiddenFor(model => model.EmailConfirmed)
        @Html.HiddenFor(model => model.ReceiveNewsletter)

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })                
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })                
            </div>
        </div>
                
        <div class="form-group">
            @Html.Label("Role", new { @class = "control-label col-md-2" })
            <span class=" col-md-10">
                @Html.DropDownListFor(model => model.Role, Model.Role.ToSelectList(), new { @class = "form-control" })                
            </span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
