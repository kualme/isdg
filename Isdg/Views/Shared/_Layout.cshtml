<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ISDG - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("ISDG", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("News", "Index", "News")</li>
                    <li>@Html.ActionLink("About ISDG", "About", "Home")</li>
                    <li>@Html.ActionLink("Statutes of ISDG", "Statutes", "Home")</li>
                    <li>@Html.ActionLink("ISDG meetings", "Index", "Meetings")</li>
                    <li>@Html.ActionLink("Related Meetings", "Index", "Meetings")</li>
                    <li>@Html.ActionLink("Publications", "About", "Home")</li>
                    <li>@Html.ActionLink("Albums", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Useful Links", "UsefulLinks", "Home")</li>
                    <li>@Html.ActionLink("Mailout", "Index", "Email")</li>
                    <li>@Html.ActionLink("Users", "Index", "Users")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="jumbotron">
            <h2>International Society on Dynamic Games</h2>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2009-@DateTime.Now.Year ISDG</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    @Scripts.Render("~/bundles/jquerysite")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
</body>
</html>
